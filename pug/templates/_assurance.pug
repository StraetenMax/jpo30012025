mjml
    //- Head
    mj-head
        mj-title JPO du 30 janvier 2025 Ecosup Assurance
        mj-font(name='Roboto' href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;700;900&display=swap')
        mj-raw.
            <meta name='color-scheme' content='light'/>
            <meta name='supported-color-schemes' content='light'/>
            <meta name="format-detection" content="telephone=no"/>
            <meta name="format-detection" content="date=no"/>
            <meta name="format-detection" content="address=no"/>
            <meta name="format-detection" content="email=no"/>
        mj-attributes
            mj-all(font-family='Roboto, Arial, Helvetica,sans serif')/
            mj-class(name='T+3' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='36px' line-height='36px' font-weight='900')/
            mj-class(name='T+2' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='24px' line-height='28px' font-weight='700')/
            mj-class(name='T+1' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='16px' line-height='20px' font-weight='700')/
            mj-class(name='T' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='16px' line-height='20px' font-weight="400")/
            mj-class(name='T-1' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='13px' line-height='15px' font-weight="400")/
            mj-class(name='T-2' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='12px' line-height='16px' font-weight="400")/
            mj-class(name='L' align="left" border-style="solid" border-width="0.75px" width="80px" padding="10px 0")
            //- couleurs modifiables
            mj-class(name="cT+1" color="#14141f" border-color="#14141f")/
            mj-class(name="cT+0" color="#626262")/
            mj-class(name="c-0" color="#684092")/
            mj-class(name="bg-0" background-color="#684092")/
            mj-class(name="c+1" color="#ba4995")/
            mj-class(name="bg+1" background-color="#ba4995")/
        mj-breakpoint(width="480px")
        mj-style.
            .c11{
                color: #ba4995 !important;
            }
            .cT00{
                color: #626262 !important;
            }

            @media(max-width:480px){
                .m-footer div{
                    text-align: center !important;
                    width: 100% !important;
                }
                .m-footer1 {
                    text-align: center !important;
                    width: 100% !important;
                    padding-top:10px !important;
                }
                .stop{
                    display: none !important;
                }
            }
    //- Body
    mj-body(background-color='#efefef' width="650px")
        //- content
        block content
        //- bloc header Assurance
            block headAssurance
            include ../includes/assurance/_headAssurance
        //- bloc article Assurance
            block imgAssurance
            include ../includes/assurance/_imgAssurance
        //- bloc signature Christian
            block signChristian
            include ../includes/assurance/_signChristian
        //- bloc formations
        block formations
            include ../includes/_formations
        //- bloc argumentaires formations
        block arg
            include ../includes/_arg
        //- bloc syrendre
        block cTa
            include ../includes/_cTa
        //- bloc partenaires Assurance
        block partenaires
            include ../includes/_partenaires
        //- bloc footer
            block footer
            include ../includes/_footer 
        //- bloc reglement
            block reglement
            include ../includes/_legislation