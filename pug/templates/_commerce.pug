mjml
    //- Head
    mj-head
        mj-title JPO du 30 janvier 2025 Ecosup Commerce
        mj-font(name='Roboto' href='https://fonts.googleapis.com/css2?family=Roboto:wght@300;700;900&display=swap')
        mj-font(name="fontAwesome" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css")/
        mj-raw.
            <meta name='color-scheme' content='light'/>
            <meta name='supported-color-schemes' content='light'/>
            <meta name="format-detection" content="telephone=no"/>
            <meta name="format-detection" content="date=no"/>
            <meta name="format-detection" content="address=no"/>
            <meta name="format-detection" content="email=no"/>
        mj-attributes
            mj-all(font-family='Roboto, Arial, Helvetica,sans serif')/
            mj-class(name='T+3' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='36px' line-height='36px' font-weight='900')/
            mj-class(name='T+2' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='24px' line-height='28px' font-weight='700')/
            mj-class(name='T700' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='16px' line-height='20px' font-weight='700')/
            mj-class(name='T500' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='16px' line-height='20px' font-weight='500')/
            mj-class(name='T400' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='16px' line-height='20px' font-weight="400")/
            mj-class(name='T-1' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='13px' line-height='17px' font-weight="400")/
            mj-class(name='T-2' font-family="Roboto, Arial, Helvetica, sans-serif" font-style="normal" font-size='10px' line-height='12px' font-weight="300")/
            mj-class(name='L' align="left" border-style="solid" border-width='0.75px' width='80px' padding="10px 0")/
            //- couleurs modifiables
            mj-class(name="cT+1" color="#14141f" border-color="#14141f")/
            mj-class(name="cT+0" color="#626262")/
            mj-class(name="c-0" color="#f6a86e")/
            mj-class(name="bg-0" background-color="#f6a86e")/
            mj-class(name="c+1" color="#ec6608")/
            mj-class(name="bg+1" background-color="#ec6608")/
            
        mj-breakpoint(width="480px")
        mj-style.
            .bg-rollover-01:hover td, .bg-rollover-01:hover a{
                background-color: #AA3E17 !important;
                color: #ffffff !important;
                border: 1px solid #AA3E17 !important;
            }

            .text-rollover:hover td, .text-rollover:hover a{
                color: #ffffff !important;
            }

            .bg-rollover-02:hover td, .bg-rollover-02:hover a{
                background-color: #AA3E17 !important;
            }

            @media(max-width:480px){
                .stop{
                    display: none !important;
                }
            }
    //- Body
    mj-body(background-color='#f2f2f2' width="650px")
        //- content
        block content
        //- bloc header
        block header
            include ../includes/commerce/_header
        //- bloc formations
        block formations
            include ../includes/commerce/_formations-02
        //- bloc partenaires Commerce
        block partenaires
            include ../includes/commerce/_partenaires
        //- bloc syrendre
        block cTa
            include ../includes/commerce/_cTa
        //- bloc certificateurs formations
        block arg
            include ../includes/commerce/_arg
        //- bloc footer
        block footer
            include ../includes/_footer 