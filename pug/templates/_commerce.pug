            mj-class(name='T-2' font-family="Roboto, Arial, Helvetica, sans-serif" font-size='12px' line-height='16px' font-weight="400")/
            mj-class(name='L' align="left" border-style="solid" border-width='0.75px' width='80px' padding="10px 0")/
            //- couleurs modifiables
            mj-class(name="cT+1" color="#14141f" border-color="#14141f")/
            mj-class(name="cT+0" color="#626262")/
            mj-class(name="c-0" color="#f6a86e")/
            mj-class(name="bg-0" background-color="#f6a86e")/
            mj-class(name="c+1" color="#ec6608")/
            mj-class(name="bg+1" background-color="#ec6608")/
        mj-breakpoint(width="480px")
        mj-style.
            .c11{
                color: #ec6608 !important;
            }
            .cT00{
                color: #626262 !important;
            }

